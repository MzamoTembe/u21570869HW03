@using u21570869_HW03.Models
@model IEnumerable<u21570869_HW03.Models.FileModel>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div>
            <h2>
                Images
            </h2>
        </div>
    </div>
    <div class="row">
        <div>
            This is a list of all of the images that you uploaded onto server.
        </div>
    </div>
</div>

<div class="container center-block" style="background-color: lightgray;">

    <br />
    <div class="row center-block g-5">

        @foreach (FileModel file in Model)
        {
            //Fetching individual file from the Server and displaying it on the view
            <div class="col-xs-12 col-sm-6 col-md-4" style="padding-bottom: 30px;">
                <div class="card h-100">
                    <a id="image" href="@Url.Content("~/Media/Images/" + @file.FileName)" >
                        <img src="@Url.Content("~/Media/Images/" + @file.FileName)" class="card-img-top" alt="" >
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"> @file.FileName </h5>

                        <button type="button" class="btn btn-success">
                            @Html.ActionLink("Download", "Download",
                             new { image = file.FileName })
                        </button>
                        <button type="button" class="btn btn-danger">
                            @Html.ActionLink("Delete", "Delete",
                           new { image = file.FileName })
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>

    $(document).ready(function () {
        $("a#image").fancybox().click();
    });

</script>

